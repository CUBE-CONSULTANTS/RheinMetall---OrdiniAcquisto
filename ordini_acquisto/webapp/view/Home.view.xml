<mvc:View controllerName="ordiniacquisto.ordiniacquisto.controller.Home"
xmlns:mvc="sap.ui.core.mvc"
displayBlock="true"
height="100%"
xmlns:core="sap.ui.core"
xmlns="sap.m"
xmlns:layout="sap.ui.layout">
    <Page
class="sapUiResponsivePadding--header sapUiResponsivePadding--footer sapUiResponsivePadding--content"
floatingFooter="true" showFooter="true" 
>
    <customHeader>
        <Bar>
            <contentLeft>
                <Title
                    text="{i18n>titleprogetto}"
                    titleStyle="H3"
                />
            </contentLeft>
            <contentRight>
                <Image
                        alt="Rheinmetall Logo"	
                        height="38.00000000px"
                        width="100%"
                        src="../public/images/Rheinmetall_Logo_2021.jpg"
                >
                </Image>
            </contentRight>
        </Bar>
    </customHeader>

    <OverflowToolbar
        visible="false"
        design="Solid"
        class="sapUiSmallMarginTopBottom"
        height="6vh"
    >
        <ToolbarSpacer />
        <ToolbarSpacer />   
        <!-- <Title
            text="AVIOMETAL, Via Sempione 15  Arsago Seprio VA    "
            titleStyle="H4"
        /> -->
    </OverflowToolbar>
    <content>
        <core:Fragment fragmentName="ordiniacquisto.ordiniacquisto.view.Fragment.filterBar" />
        <core:Fragment fragmentName="ordiniacquisto.ordiniacquisto.view.Fragment.treeTable" />
    </content>
    <footer>
        <OverflowToolbar design="Solid" >    
        <ToolbarSpacer/>
        <Button
        visible="{= ${userModel>/tipoUtente} === 'Interno' ? false : true }"
        icon="sap-icon://save"
        text="{i18n>Save}"
        type="Emphasized"    
        />
        <Button
        visible="{= ${userModel>/tipoUtente} === 'Interno' ? true : false }"
        icon="sap-icon://save"
        text="{i18n>Conferma}"
        type="Emphasized"    
    />
        </OverflowToolbar>
    </footer>
    </Page>
</mvc:View>
